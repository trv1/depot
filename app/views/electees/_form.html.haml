= form_for @electee do |f|
  - if @electee.errors.any?
    #error_explanation
      %h2= "#{pluralize(@electee.errors.count, "error")} prohibited this electee from being saved:"
      %ul
        - @electee.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
