= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :cart
    = f.text_field :cart
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :address
    = f.text_area :address
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
