%h1 Список заказов

%table.table.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th Корзина
      %th Пользователь
      %th Адрес
      %th Статус
      %th Комментарий
      %th
      %th
      %th

  %tbody
    - @orders.each do |order|
      %tr
        %td= order.cart.id
        %td= order.user.email
        %td= order.address
        %td= order.status
        %td= order.comment
        %td= link_to 'Показать', order
        %td= link_to 'Редактировать', edit_order_path(order)
        %td= link_to 'Удалить', order, :method => :delete, :data => { :confirm => 'Вы уверены?' }

%br

= paginate @orders
